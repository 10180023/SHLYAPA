<Window x:Class="ООО_Стройматериалы.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ООО_Стройматериалы"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="2*"/>
            <RowDefinition Height="8*"/>
        </Grid.RowDefinitions>

        <Rectangle Grid.Row="0" Fill="LightBlue"/>
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center" HorizontalAlignment="Center">
            <Image Source="/Resources/icon.ico" Width="90" Height="90"/>
            <TextBlock Text="ООО Стройматериалы" VerticalAlignment="Center"/>
        </StackPanel>

        <Frame Name="mainFrame" Grid.Row="1" NavigationUIVisibility="Hidden"/>

        <Button Name="btnExit" Content="Выход" Click="btnExit_Click" HorizontalAlignment="Right"/>

        <StackPanel>
            <TextBlock Name="tbHi" Text="Здравствуйте, "/>
            <TextBlock Name="tbName"/>
            <TextBlock Name="tbRole"/>
        </StackPanel>
    </Grid>
</Window>
